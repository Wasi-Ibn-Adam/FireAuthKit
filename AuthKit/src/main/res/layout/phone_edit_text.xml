<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <Spinner
        android:layout_width="@dimen/spinner_width"
        android:layout_height="wrap_content"
        android:dropDownWidth="@dimen/spinner_height"
        android:popupBackground="@color/pf_white"
        android:tag="@string/com_lamudi_phonefield_flag_spinner" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:inputType="phone"
        android:tag="@string/com_lamudi_phonefield_edittext"
        android:textColor="@color/optheme" />

</LinearLayout>