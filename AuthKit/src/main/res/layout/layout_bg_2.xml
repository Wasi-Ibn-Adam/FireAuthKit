<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <View
        android:id="@+id/polygon_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="-150dp"
        android:alpha="0.1"
        android:background="@drawable/polygon_fill"
        android:padding="20dp"
        android:rotation="45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="300dp"
        app:layout_constraintHeight_min="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="300dp"
        app:layout_constraintWidth_min="200dp" />

    <View
        android:id="@+id/polygon_2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="10dp"
        android:alpha="0.075"
        android:background="@drawable/polygon_fill"
        android:padding="20dp"
        android:rotation="45"
        app:layout_constraintBottom_toTopOf="@id/polygon_3"
        app:layout_constraintEnd_toEndOf="@+id/polygon_1"
        app:layout_constraintHeight_max="300dp"
        app:layout_constraintHeight_min="200dp"
        app:layout_constraintTop_toBottomOf="@+id/polygon_1"
        app:layout_constraintWidth_max="300dp"
        app:layout_constraintWidth_min="200dp"
        app:layout_goneMarginEnd="150dp" />

    <View
        android:id="@+id/polygon_3"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginEnd="-150dp"
        android:layout_marginBottom="-20dp"
        android:alpha="0.1"
        android:background="@drawable/polygon_fill"
        android:padding="20dp"
        android:rotation="45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="300dp"
        app:layout_constraintHeight_min="200dp"
        app:layout_constraintWidth_max="300dp"
        app:layout_constraintWidth_min="200dp" />

    <View
        android:id="@+id/polygon_4"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginEnd="-170dp"
        android:alpha="0.025"
        android:background="@drawable/polygon_fill"
        android:padding="20dp"
        android:rotation="45"
        app:layout_constraintBottom_toTopOf="@id/polygon_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/polygon_1" />


    <View
        android:id="@+id/polygon_5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:alpha="0.05"
        android:background="@drawable/polygon_fill"
        android:padding="20dp"
        android:rotation="45"
        app:layout_constraintBottom_toTopOf="@+id/polygon_2"
        app:layout_constraintEnd_toStartOf="@+id/polygon_2"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>