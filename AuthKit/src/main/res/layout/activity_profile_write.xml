<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical"
    android:theme="@style/Theme.AuthKit">

    <include layout="@layout/layout_bg_2" />

    <FrameLayout
        android:id="@+id/profile_frame_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/profile_frame_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/frag_profile_img" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/profile_frame_bottom"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include layout="@layout/frag_account_policy_terms" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>