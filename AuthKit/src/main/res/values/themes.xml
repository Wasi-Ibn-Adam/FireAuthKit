<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AuthKit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold_500</item>
        <item name="colorPrimaryVariant">@color/gold_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>


        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/gold_500</item>
        <item name="itemIconTint">@color/tintLight</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent
        </item>

    </style>

    <style name="Theme.AuthKit.Splash" parent="Theme.AuthKit">
        <item name="android:statusBarColor">@color/theme</item>
        <item name="android:navigationBarColor">@color/theme</item>
    </style>

    <style name="SpecificCornerRounded">
        <item name="cornerSizeTopRight">100dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeBottomLeft">100dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>


</resources>